{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "laravel-boost": {
      "type": "local",
      "enabled": true,
      "command": [
        "php",
        "artisan",
        "boost:mcp"
      ]
    },
    "herd": {
      "type": "local",
      "enabled": true,
      "command": [
        "php",
        "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
      ],
      "environment": {
        "SITE_PATH": "~/Herd/peopledear"
      }
    },
    "playwright": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ]
    },
    "shadcn": {
      "type": "local",
      "command": [
        "npx",
        "shadcn@latest",
        "mcp"
      ],
      "enabled": true
    }
  }
}
